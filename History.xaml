<Window x:Class="GradePointAverageCalulatorForSWPU.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradePointAverageCalulatorForSWPU"
        mc:Ignorable="d"
        Title="历史记录" Height="300" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="500">
        <ListBox x:Name="Historys" Height="200" Width="450" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"
                 MouseDoubleClick="ListBox_MouseDoubleClick"/>
        <Button x:Name="Clear" Content="清空历史记录" FontSize="9" Height="15" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,25,0,0" Click="Clear_Click"/>

    </Grid>
</Window>
