<Window x:Class="GradePointAverageCalulatorForSWPU.HistoryRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradePointAverageCalulatorForSWPU"
        mc:Ignorable="d"
        Title="重命名" Height="150" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Width="300">
        <Label Content="名称" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12"/>
        <TextBox x:Name="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" FontSize="12" Height="20"/>
        <Button x:Name="Rename" Content="修改" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="20" Width="70" Click="Rename_Click" IsDefault="True" />

    </Grid>
</Window>
